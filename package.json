{
  "name": "inkubator-video-api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "repository": "https://github.com/nikolay-kolyshev/inkubator-video-api.git",
  "author": "Николай Колышев <sword.of.destiny2001@mail.ru>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "concurrently --kill-others \"npm run watch\" \"npm run inspect\"",
    "start:prod": "node dist/index.js",
    "watch": "tsc -w",
    "inspect": "nodemon --inspect dist/index.js",

    "setup": "yarn install --frozen-lockfile",
    "unsetup": "rm -rf node_modules",
    "presetup": "npm run unsetup",
    "reinstall": "rm -rf node_modules && yarn",

    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",

    "test": "jest"
  },
  "dependencies": {
    "@types/jsonwebtoken": "9.0.2",
    "bcrypt": "5.1.0",
    "date-fns": "2.29.3",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "express-validator": "6.14.2",
    "jsonwebtoken": "9.0.0",
    "mongodb": "4.12.1",
    "nodemailer": "6.9.3",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/express": "4.17.14",
    "@types/jest": "29.2.3",
    "@types/node": "18.11.9",
    "@types/nodemailer": "6.4.8",
    "@types/supertest": "2.0.12",
    "@types/uuid": "9.0.0",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.42.1",
    "concurrently": "8.2.0",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-n": "15.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.0",
    "jest": "29.3.1",
    "nodemon": "2.0.20",
    "prettier": "2.7.1",
    "prettier-plugin-organize-imports": "3.2.0",
    "supertest": "6.3.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "engines": {
    "npm": "use-yarn-instead-of-npm",
    "pnpm": "use-yarn-instead-of-pnpm",
    "yarn": ">= 1.22.17"
  }
}
